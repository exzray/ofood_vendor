<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exzray.ofoodvendor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OFoodVendor">
        <activity
            android:name=".activityprofile.ProfileActivity"
            android:label="Update Profile" />
        <activity android:name=".activityvendor.VendorActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activitylogin.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitymain.MainActivity" />
        <activity
            android:name=".activitymessage.MessageActivity"
            android:label="Message"
            android:parentActivityName=".activitymain.MainActivity" />
        <activity
            android:name=".activityorder.OrderActivity"
            android:label="Order"
            android:parentActivityName=".activitymain.MainActivity" />
        <activity
            android:name=".activitybooking.BookingActivity"
            android:label="Booking"
            android:parentActivityName=".activitymain.MainActivity" />
        <activity
            android:name=".activityproduct.ProductActivity"
            android:label="Product"
            android:parentActivityName=".activitymain.MainActivity" />
        <activity
            android:name=".activitycategory.CategoryActivity"
            android:label="Category"
            android:parentActivityName=".activitymain.MainActivity" />
        <activity
            android:name=".activitytable.TableActivity"
            android:label="Table"
            android:parentActivityName=".activitymain.MainActivity" />
    </application>

</manifest>